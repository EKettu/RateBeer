<p id="notice"></p>

<h1>Beer places search</h1>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
 <% if @weather %>
    <br>
    <br>
    <strong>the current weather in <%= @city %> </strong>
    <br>
    <p><%=@weather.temp_c%> Celsius </p>
    <br>
    <%=image_tag(@weather.condition["icon"])%>
    <br>
    <p><strong>wind</strong> <%=@weather.wind_kph%> km/h, direction <%=@weather.wind_dir%></p>
    <br>
 <%end%>
    <table class="table table-hover">
    <thead>
    <th>id</th>
    <th>name</th>
    <th>status</th>
    <th>street</th>
    <th>city</th> 
    <th>zip</th> 
    <th>country</th> 
    <th>overall</th>               
    </thead>
    <% @places.each do |place| %>
    <tr>
        <td><%= place.id %></td>
        <td><%= link_to place.name, place_path(place.id) %></td>
        <td><%= place.status %></td>
        <td><%= place.street %></td>
        <td><%= place.city %></td> 
        <td><%= place.zip %></td> 
        <td><%= place.country %></td> 
        <td><%= place.overall %></td>        
    </tr>
    <% end %>
    </table>
<% end %>