<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
 <p> No ratings yet </p>
<% else %>
  <p>Has <%=@beer.ratings.count%> <%="rating".pluralize(@beer.ratings.count)%>, average  <%= @beer.average_rating%> </p>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_beer_path(@beer) %>
  <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', beers_path %>
