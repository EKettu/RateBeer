<p id="notice"><%= notice %></p>

<p>
  <H1><%= @user.username %></H1>
  <% if @user.ratings.empty? %>
 <p> Has made no ratings yet </p>
<% else %>
  <p>Has made <%=@user.ratings.count%> <%="rating".pluralize(@user.ratings.count)%>, average rating <%= @user.average_rating%> </p>
<% end %>
</p>

<h2>ratings</h2>
<ul>
 <% @user.ratings.each do |rating| %>
   <li> <%= rating %> <%= link_to 'delete', rating_path(rating.id), method: :delete, data: { confirm: 'Are you sure?' }  %> </li>
 <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
