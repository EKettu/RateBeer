<h1>Users</h1>

<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers </th>
      <th> total ratings </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.uniq.size %></td>
        <td><%= user.ratings.size %></td>
        <%if current_user%>
         <td> 
          <% if current_user.admin and user.closed %>
            <span class="badge badge-info">account frozen</span>
          <% end %>
         </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-primary" %>
