<p id="notice"><%= notice %></p>

<h2><%= @brewery.name %></h2>

<p>
  <i>Established at</i>
 <i> <%= @brewery.year %> </i>
</p>

<p>
  Number of beers 
  <%=@brewery.beers.count%>
</p>

<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<% if @brewery.ratings.empty? %>
 <p> No ratings yet </p>
<% else %>
  <p>Has <%=@brewery.ratings.count%> <%="rating".pluralize(@brewery.ratings.count)%>, average  <%= @brewery.average_rating%> </p>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_brewery_path(@brewery) %>
  <%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', breweries_path %>
